<script lang="ts">
  import { onMount } from 'svelte';

  let isScrolled = false;

  onMount(() => {
    const handleScroll = () => {
      isScrolled = window.scrollY > 50;
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  });
</script>

<div class="fixed top-0 left-0 w-full z-50">
    <!-- Top Announcement Bar -->
    <div class="bg-[#F4F4F0] text-seed-black text-[11px] py-2.5 font-medium tracking-wide text-center w-full relative z-50">
        <a href="/" class="hover:underline flex items-center justify-center gap-1">
            Is DS-01® Daily Synbiotic Right For You? <span class="text-[10px]">→</span>
        </a>
    </div>

    <!-- Navbar -->
    <nav class="w-full transition-all duration-300 {isScrolled ? 'bg-seed-darker/95 backdrop-blur-sm py-3 text-white' : 'bg-transparent py-5 text-white'}">
        <div class="container mx-auto px-6 md:px-12 flex justify-between items-center">
            <!-- Left: Logo & Links -->
            <div class="flex items-center gap-10">
                <a href="/" class="text-[26px] font-bold tracking-tight flex items-baseline gap-1 leading-none">
                    Seed<span class="w-2.5 h-2.5 bg-current rounded-full"></span>
                </a>
                <div class="hidden md:flex items-center gap-8 text-[13px] font-medium tracking-wide">
                    <a href="/" class="hover:opacity-70 transition-opacity">Shop</a>
                    <a href="/" class="hover:opacity-70 transition-opacity">Science</a>
                    <a href="/" class="hover:opacity-70 transition-opacity">Learn</a>
                </div>
            </div>

            <!-- Right: Actions -->
            <div class="flex items-center gap-6 text-[13px] font-medium">
                <a href="/" class="hover:opacity-70 transition-opacity hidden sm:block">Login</a>
                <a href="/" class="bg-white text-seed-black px-6 py-2.5 rounded-full hover:bg-gray-100 transition-colors">Get Started</a>
            </div>
        </div>
    </nav>
</div>
